@{
    ViewData["Title"] = "Camiseta Estilo Retro";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="product-details-container">
    <div class="row">
        <!-- Imagen del Producto -->
        <div class="col-md-6">
            <img src="https://via.placeholder.com/300x400?text=Camiseta+Estilo+Retro" alt="Camiseta Estilo Retro" class="img-fluid">
        </div>

        <!-- Detalles del Producto -->
        <div class="col-md-6">
            <h3>Camiseta Estilo Retro</h3>
            <p>Esta camiseta con un diseño vintage te hará destacar. Con un estampado retro de los 90s, esta prenda es perfecta para quienes aman el estilo clásico y moderno a la vez.</p>
            <h4>Precio: $30.00</h4>
            <p><strong>Envío:</strong> Gratis</p>

            <!-- Opciones de Color -->
            <h5>Colores disponibles:</h5>
            <select class="form-select" id="color-select">
                <option value="amarillo">Amarillo</option>
                <option value="azul">Azul</option>
                <option value="rojo">Rojo</option>
            </select>

            <!-- Opciones de Talla -->
            <h5>Tallas disponibles:</h5>
            <select class="form-select" id="size-select">
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
            </select>

            <!-- Botones de acción -->
            <div class="mt-3">
                <button class="btn btn-success">Comprar</button>
                <button class="btn btn-warning" onclick="agregarAlCarrito()">
                    Agregar al carrito
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function agregarAlCarrito() {
        // Obtener los valores seleccionados
        const color = document.getElementById("color-select").value;
        const talla = document.getElementById("size-select").value;
        const nombre = "Camiseta Estilo Retro";
        const precio = 30.00;

        // Redirigir al controlador con los valores seleccionados
        window.location.href = `@Url.Action("AgregarAlCarrito", "CarritoItems")?nombre=${nombre}&color=${color}&talla=${talla}&precio=${precio}`;
    }
</script>


