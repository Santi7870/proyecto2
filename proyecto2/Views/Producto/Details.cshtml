@{
    ViewData["Title"] = "Hoodie Clásico";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="product-details-container">
    <div class="row">
        <!-- Imagen del Producto -->
        <div class="col-md-6">
            <img src="https://via.placeholder.com/300x400" alt="Hoodie Clásico" class="img-fluid">
        </div>

        <!-- Detalles del Producto -->
        <div class="col-md-6">
            <h3>Hoodie Clásico</h3>
            <p>Este es un hoodie clásico, perfecto para el clima fresco y para el día a día. Hecho de algodón 100% de alta calidad.</p>
            <h4>Precio: $30.00</h4>
            <p><strong>Envío:</strong> Gratis</p>

            <!-- Opciones de Color -->
            <h5>Colores disponibles:</h5>
            <select class="form-select" id="color-select">
                <option value="rojo">Rojo</option>
                <option value="azul">Azul</option>
                <option value="gris">Gris</option>
            </select>

            <!-- Opciones de Talla -->
            <h5>Tallas disponibles:</h5>
            <select class="form-select" id="size-select">
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
            </select>

            <!-- Botones de acción -->
            <div class="mt-3">
                <button class="btn btn-success">Comprar</button>
                <button class="btn btn-warning">
                    <a href="@Url.Action("AgregarAlCarrito", "CarritoItems", new { nombre = "Hoodie Gris", color = "Gris", talla = "M", precio = 35.00 })" style="color: white; text-decoration: none;">Agregar al carrito</a>
                </button>
            </div>
        </div>
    </div>
</div>

