@{
    ViewData["Title"] = "Zapato de Cuero";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="product-details-container">
    <div class="row">
        <!-- Imagen del Producto -->
        <div class="col-md-6">
            <img src="https://via.placeholder.com/300x400?text=Zapato+de+Cuero" alt="Zapato de Cuero" class="img-fluid">
        </div>

        <!-- Detalles del Producto -->
        <div class="col-md-6">
            <h3>Zapato de Cuero</h3>
            <p>Estos zapatos de cuero son el equilibrio perfecto entre elegancia y comodidad. Hechos con materiales de alta calidad y un diseño clásico, son ideales tanto para ocasiones formales como informales. La durabilidad del cuero asegura que este zapato te acompañe por mucho tiempo.</p>
            <h4>Precio: $80.00</h4>
            <p><strong>Envío:</strong> Gratis</p>

            <!-- Opciones de Color -->
            <h5>Colores disponibles:</h5>
            <select class="form-select" id="color-select">
                <option value="negro">Negro</option>
                <option value="marron">Marrón</option>
                <option value="beige">Beige</option>
            </select>

            <!-- Opciones de Talla -->
            <h5>Tallas disponibles:</h5>
            <select class="form-select" id="size-select">
                <option value="40">40</option>
                <option value="41">41</option>
                <option value="42">42</option>
                <option value="43">43</option>
                <option value="44">44</option>
            </select>

            <!-- Botones de acción -->
            <div class="mt-3">
                <button class="btn btn-success">Comprar</button>
                <button class="btn btn-warning">Agregar al carrito</button>
            </div>
        </div>
    </div>
</div>
