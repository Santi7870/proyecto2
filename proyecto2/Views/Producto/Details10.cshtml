@{
    ViewData["Title"] = "Camiseta de Manga Larga";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="product-details-container">
    <div class="row">
        <!-- Imagen del Producto -->
        <div class="col-md-6">
            <img src="https://calvinecuador.vtexassets.com/arquivos/ids/189036-800-auto?v=638374907907070000&width=800&height=auto&aspect=true" alt="Camiseta de Manga Larga" class="img-fluid" width="500" height="500">
        </div>

        <!-- Detalles del Producto -->
        <div class="col-md-6">
            <h3>Camiseta de Manga Larga</h3>
            <p>Esta camiseta de manga larga es perfecta para los días más frescos, hecha de algodón suave y transpirable. Su diseño moderno y cómodo la convierte en una prenda ideal para combinar con jeans o pantalones deportivos.</p>
            <h4>Precio: $25.00</h4>
            <p><strong>Envío:</strong> Gratis</p>

            <!-- Opciones de Color -->
            <h5>Colores disponibles:</h5>
            <select class="form-select" id="color-select">
                <option value="gris">Gris</option>
                <option value="negro">Negro</option>
                <option value="blanco">Blanco</option>
            </select>

            <!-- Opciones de Talla -->
            <h5>Tallas disponibles:</h5>
            <select class="form-select" id="size-select">
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
            </select>

            <!-- Botones de acción -->
            <div class="mt-3">
                <button class="btn btn-success" onclick="crearAlertaComprar()">Comprar</button>
                <button class="btn btn-warning" onclick="agregarAlCarrito()">
                    Agregar al carrito
                </button>
            </div>
            <div>
                <a href="@Url.Action("holamundo", "Account")" class="btn btn-secondary mt-4">Regresar</a>
            </div>
        </div>
    </div>
</div>

<script>
    // Función para mostrar la alerta antes de realizar la compra directa
    function crearAlertaComprar() {
        var respuesta = confirm("¿Estás seguro de que deseas comprar este producto?");

        if (respuesta) {
            // Si el usuario confirma, redirigir al controlador para la compra directa
            comprarDirecto();
        }
    }

    // Función para Comprar Directo
    function comprarDirecto() {
        // Obtener los valores seleccionados
        const color = document.getElementById("color-select").value;
        const talla = document.getElementById("size-select").value;
        const nombre = "Camiseta de Manga Larga";
        const precio = 25.00;

        // Redirigir al controlador para compra directa
        window.location.href = `@Url.Action("ComprarDirecto", "CarritoItems")?nombre=${nombre}&color=${color}&talla=${talla}&precio=${precio}`;

        // Mostrar alerta de compra exitosa
        setTimeout(function () {
            alert("¡Compra realizada con éxito!");
        }, 1000); // Retraso de 1 segundo para mostrar la alerta después de redirigir
    }

    // Función para Agregar al Carrito
    function agregarAlCarrito() {
        // Obtener los valores seleccionados
        const color = document.getElementById("color-select").value;
        const talla = document.getElementById("size-select").value;
        const nombre = "Camiseta de Manga Larga";
        const precio = 25.00;

        // Redirigir al controlador con los valores seleccionados
        window.location.href = "@Url.Action("AgregarAlCarrito", "CarritoItems")?nombre=" + nombre + "&color=" + color + "&talla=" + talla + "&precio=" + precio;
    }
</script>


