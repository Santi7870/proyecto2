@{
    ViewData["Title"] = "Zapato Formal";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="product-details-container">
    <div class="row">
        <!-- Imagen del Producto -->
        <div class="col-md-6">
            <img src="https://via.placeholder.com/300x400?text=Zapato+Formal" alt="Zapato Formal" class="img-fluid">
        </div>

        <!-- Detalles del Producto -->
        <div class="col-md-6">
            <h3>Zapato Formal</h3>
            <p>Estos zapatos formales están diseñados para ocasiones especiales, reuniones de negocios y eventos importantes. Confeccionados con cuero de alta calidad y una suela resistente, estos zapatos ofrecen tanto elegancia como comodidad durante todo el día.</p>
            <h4>Precio: $100.00</h4>
            <p><strong>Envío:</strong> Gratis</p>

            <!-- Opciones de Color -->
            <h5>Colores disponibles:</h5>
            <select class="form-select" id="color-select">
                <option value="negro">Negro</option>
                <option value="marron">Marrón</option>
                <option value="gris">Gris</option>
            </select>

            <!-- Opciones de Talla -->
            <h5>Tallas disponibles:</h5>
            <select class="form-select" id="size-select">
                <option value="40">40</option>
                <option value="41">41</option>
                <option value="42">42</option>
                <option value="43">43</option>
                <option value="44">44</option>
            </select>

            <!-- Botones de acción -->
            <div class="mt-3">
                <button class="btn btn-success">Comprar</button>
                <button class="btn btn-warning" onclick="agregarAlCarrito()">
                    Agregar al carrito
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function agregarAlCarrito() {
        // Obtener los valores seleccionados
        const color = document.getElementById("color-select").value;
        const talla = document.getElementById("size-select").value;
        const nombre = "Zapato Formal";
        const precio = 100.00;

        // Redirigir al controlador con los valores seleccionados
        window.location.href = `@Url.Action("AgregarAlCarrito", "CarritoItems")?nombre=${nombre}&color=${color}&talla=${talla}&precio=${precio}`;
    }
</script>


