@{
    ViewData["Title"] = "Hoodie Gris";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="product-details-container">
    <div class="row">
        <!-- Imagen del Producto -->
        <div class="col-md-6">
            <img src="https://via.placeholder.com/300x400?text=Hoodie+Gris" alt="Hoodie Gris" class="img-fluid">
        </div>

        <!-- Detalles del Producto -->
        <div class="col-md-6">
            <h3>Hoodie Gris</h3>
            <p>Este hoodie gris es ideal para mantenerte cómodo y abrigado en cualquier momento. Confeccionado con materiales suaves y duraderos.</p>
            <h4>Precio: $35.00</h4>
            <p><strong>Envío:</strong> Gratis</p>

            <!-- Opciones de Color -->
            <h5>Colores disponibles:</h5>
            <select class="form-select" id="color-select">
                <option value="gris">Gris</option>
                <option value="azul">Azul</option>
                <option value="rojo">Rojo</option>
            </select>

            <!-- Opciones de Talla -->
            <h5>Tallas disponibles:</h5>
            <select class="form-select" id="size-select">
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
            </select>

            <!-- Botones de acción -->
            <div class="mt-3">
                <button class="btn btn-success">Comprar</button>
                <button class="btn btn-warning">Agregar al carrito</button>
            </div>
        </div>
    </div>
</div>

